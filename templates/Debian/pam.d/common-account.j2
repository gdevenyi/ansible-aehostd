#%PAM-1.0
#
# {{ ansible_managed }}
# All changes will be overwritten.
#
# Account-related modules common to all services
#
# This file is included from other service-specific PAM config files,
# and should contain a list of the account modules that define
# the central access policy for use on the system.  The default is to
# only deny service to users whose accounts are expired.
#
account	sufficient	{{ aehostd_pam_module }} minimum_uid={{ aehostd_min_uid }}
account	required	pam_unix.so
{% if aehostd_pam_mkhomedir_args is defined %}
session	required	pam_mkhomedir.so {{ aehostd_pam_mkhomedir_args }}
{% endif %}
